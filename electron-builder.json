{
    "appId": "com.0biwan.resourcify",
    "productName": "Resourcify",
    "files": [
        "dist-electron",
        "dist-react"
    ],
    "directories":{
        "output":"dist",
        "buildResources":"buildResources"
    },
    "publish": [
        {
            "provider": "github",
            "owner": "xakep8",
            "repo": "resourcify"
        }
    ],
    "extraResources": [
        "dist-electron/preload.cjs",
        "src/assets/**"
    ],
    "mac": {
        "target": [
            {
                "target": "dmg",
                "arch":["universal"]
            }
        ],
        "icon": "./favicon.png"
    },
    "linux": {
        "target": "deb",
        "desktop": {
            "Terminal": "false",
            "Type": "Application",
            "Categories": "Utility"
        },
        "icon": "./favicon.png",
        "afterInstall": "buildResources/after-install.sh"
    },
    "win": {
        "target": [
            "portable",
            "msi"
        ],
        "icon": "./favicon.png"
    }
}